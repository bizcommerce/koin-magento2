<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="koin-fingerprint" type="host">*.despegar.com</value>
                <value id="koin-src" type="host">*.koin.com.br</value>
                <value id="koin-tagmanager" type="host">*.googletagmanager.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="koin-fingerprint-frame" type="host">*.despegar.com</value>
                <value id="koin-3ds-frame" type="host">*.koin.com.br</value>
                <value id="koin-tagmanager-frame" type="host">*.googletagmanager.com</value>
            </values>
        </policy>
        <policy id="frame-ancestors">
            <values>
                <value id="koin-fingerprint-frame-ancestors" type="host">*.despegar.com</value>
                <value id="koin-3ds-frame-ancestors" type="host">*.koin.com.br</value>
                <value id="koin-tagmanager-frame-ancestors" type="host">*.googletagmanager.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="koin-fingerprint-img" type="host">*.despegar.com</value>
                <value id="koin-img" type="host">*.koin.com.br</value>
                <value id="koin-tagmanager-img" type="host">*.googletagmanager.com</value>
                <value id="koin-fonts-google-img" type="host">fonts.googleapis.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="koin-fingerprint-connect" type="host">*.despegar.com</value>
                <value id="koin-tagmanager-connect" type="host">*.googletagmanager.com</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="koin-fonts-google" type="host">fonts.googleapis.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
